- if line_item == @current_item
  %tr{id: 'current_item'}
    %td= "#{line_item.quantity} X "
    %td= line_item.product.title
    %td{class: 'item_price'}= number_to_currency line_item.total_price
- else
  %tr
    %td= "#{line_item.quantity} X "
    %td= line_item.product.title
    %td{class: 'item_price'}= number_to_currency line_item.total_price
