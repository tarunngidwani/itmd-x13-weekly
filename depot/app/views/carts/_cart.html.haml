%h2 Your Cart

%table

  = render cart.line_items

  %tr{class: 'total_line'}
    %td{colspan: 2} Total
    %td{class: 'total_cell'}= number_to_currency cart.total_price

= button_to 'Checkout', new_order_path, method: :get

= button_to 'Empty Cart', cart, method: :delete,
              data: { confirm: 'Are you sure?' }
